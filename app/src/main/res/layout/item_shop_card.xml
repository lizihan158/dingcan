<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardShop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="3dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- 店铺图片 -->
        <ImageView
            android:id="@+id/ivShopPic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:background="@drawable/img_shape_placeholder"/>

        <!-- 右侧信息区 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp">

            <!-- 店铺名 -->
            <TextView
                android:id="@+id/tvShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺名称"
                android:textSize="16sp"
                android:textColor="#222222"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- 店铺简介 -->
            <TextView
                android:id="@+id/tvShopDescr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺描述，例如主营品类"
                android:textSize="13sp"
                android:textColor="#888888"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- 公告 -->
            <TextView
                android:id="@+id/tvShopAnnounce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公告信息"
                android:textSize="12sp"
                android:textColor="#607D8B"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- 营业时间 -->
            <TextView
                android:id="@+id/tvShopTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营业时间：08:00-22:00"
                android:textSize="11sp"
                android:textColor="#999999"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>



